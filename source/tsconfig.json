{
    "compilerOptions": {
        "strict": true,
        "target": "ES2015",
        "module": "NodeNext",
        "lib": [
            "ESNext"
        ],
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./*"
            ],
            "@packageJson": [
                "../package.json"
            ],
        },
        "outDir": "../dist"
    }
}